<h1>Judges</h1>

<table class = "table table-bordered table-striped table table-hover">
  <tr>
  	<th>Email</th>
	<th>First Name</th>
	<th>Last Name</th>
	<th>Street</th>
	<th>City</th>
	<th>State</th>
	<th>Zip</th>
	<th>Area Code</th>
	<th>Phone Number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @judges.each do |judge| %>
  <tr>
  	<td><%= judge.email %></td>
	<td><%= judge.first_name %></td>
	<td><%= judge.last_name %></td>
	<td><%= judge.street %></td>
	<td><%= judge.city %></td>
	<td><%= judge.state %></td>
	<td><%= judge.zip %></td>
	<td><%= judge.area_code %></td>
	<td><%= judge.phone_number %></td>
	<td><%= link_to image_tag('show.png'), judge %></td>
	<td><%= link_to image_tag('penciledit.png'), edit_judge_path(judge) %></td>
	<td><%= link_to image_tag('delete.jpg'), judge, method: :delete, data: {confirm: 'Are you sure?'}%></td>
  </tr>
<% end %>
</table>

<br />

