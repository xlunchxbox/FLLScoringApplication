<script type="text/javascript">
    $(function(){
       $('[rel="tooltip"]').tooltip();
    });
</script>

<h1>Core Values</h1>
<table class = "table table-bordered table-striped table table-hover">
  <tr>
	<th rel="tooltip" title="Team #"><%= sortable "teamNumber", "Team #"%></th>
    <th rel="tooltip" title="Discovery"><%= sortable "discovery", "D" %></th>
    <th rel="tooltip" title="Team Spirit"><%= sortable "teamSpirit", "TS" %></th>
    <th rel="tooltip" title="Integration"><%= sortable "integration", "Integ" %></th>
    <th rel="tooltip" title="Effectiveness"><%= sortable "effectiveness", "Effec" %></th>
    <th rel="tooltip" title="Efficiency"><%= sortable "efficiency", "Effic" %></th>
    <th rel="tooltip" title="Kids Do The Work"><%= sortable "kidsDoTheWork", "KDTW" %></th>
    <th rel="tooltip" title="Inclusion"><%= sortable "inclustion", "Inc" %></th>
    <th rel="tooltip" title="Respect"><%= sortable "respect", "R" %></th>
    <th rel="tooltip" title="Coopertition"><%= sortable "coopertition", "C" %></th>
    <th rel="tooltip" title="Inspiration Total"><%= sortable "inspirationTotal", "IT" %></th>
    <th rel="tooltip" title="Teamwork Total"><%= sortable "teamworkTotal", "TwT" %></th>
    <th rel="tooltip" title="Gracious Professionalism Total"><%= sortable "graciousProfessionalismTotal", "GPT" %></th>
    <th rel="tooltip" title="Core Value Total"><%= sortable "coreValueTotal", "CVT" %></th>
	<% if signed_in? %>
	    <th></th>
	    <th></th>
	    <th></th>
	<% end %>
  </tr>
<% @corevalues.each do |corevalue| %>
  <tr>
    <td><%= corevalue.teamNumber %></td>
    <td><%= corevalue.discovery %></td>
    <td><%= corevalue.teamSpirit %></td>
    <td><%= corevalue.integration %></td>
    <td><%= corevalue.effectiveness %></td>
    <td><%= corevalue.efficiency %></td>
    <td><%= corevalue.kidsDoTheWork %></td>
    <td><%= corevalue.inclusion %></td>
    <td><%= corevalue.respect %></td>
    <td><%= corevalue.coopertition %></td>
    <td><%= corevalue.inspirationTotal %></td>
    <td><%= corevalue.teamworkTotal %></td>
    <td><%= corevalue.graciousProfessionalismTotal %></td>
    <td><%= corevalue.coreValueTotal %></td>
    <%# link_to 'Show', corevalue %>
    <%# link_to 'Edit', edit_corevalue_path(corevalue) %>
    <%# link_to 'Destroy', corevalue, method: :delete, data: { confirm: 'Are you sure?' } %>
	<% if signed_in? %>
		<td><%= link_to image_tag('show.png'), corevalue %></td>
		<td><%= link_to image_tag('penciledit.png'), edit_corevalue_path(corevalue) %></td>
		<td><%= link_to image_tag('delete.jpg'), corevalue, method: :delete, data: {confirm: 'Are you sure?'}%></td>
	<% end %>
  </tr>
<% end %>
</table>
<br />

<% if signed_in? %>
	<%= link_to 'New Corevalue', new_corevalue_path,rel: :tooltip , title: 'Create a new entry'%>
<% end %>

