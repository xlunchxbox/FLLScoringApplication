<h1>Listing Users</h1>

<table class = "table table-bordered table-striped">
  <tr>
    <th>Email</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Street</th>
    <th>City</th>
    <th>Zip</th>
    <th>State</th>
    <th>Areacode</th>
    <th>Phonenumber</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
	  <td><%= user.email %></td>	
	  <td><%= user.firstName %></td>
	  <td><%= user.lastName %></td>
	  <td><%= user.street %></td>
	  <td><%= user.city %></td>
	  <td><%= user.zip %></td>
	  <td><%= user.state %></td>
	  <td><%= user.areaCode %></td>
	  <td><%= user.phoneNumber %></td>
	  <td><%= user.type %></td>
	  <td><%= link_to 'Show', user %></td>
	  <td><%= link_to 'Edit', edit_user_path(user) %></td>
	  <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

